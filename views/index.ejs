<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Home</title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/new">ADD NEW</a>
    <ul>
      <% messages.forEach((message, index) => { %>
      <li>
        <p><%= message.text %></p>
        <p><%= message.user %></p>
        <p><%= message.added %></p>
        <a href="/message/<%= index %>">View Message</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
